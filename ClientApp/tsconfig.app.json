{
  "extends": "./tsconfig.node.json", // node ayarlarını genişlet
  "compilerOptions": {
    "outDir": "./dist", // Çıktı dizini
    "rootDir": "./src" // Kök dizin
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"], // Hangi dosyaların dahil edileceği
  "exclude": ["node_modules", "**/*.spec.ts"] // Hariç tutulan dosyalar
}
